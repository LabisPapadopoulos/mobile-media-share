<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content" android:orientation="vertical" android:layout_width="fill_parent" >
    <ImageView
        android:id="@+id/fileImage"
        android:layout_width="50dip"
        android:layout_height="50dip" />

    <TextView android:text="@+id/title"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/fileImage"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="5dip" />

    <TextView android:text="@+id/user"
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/fileImage"
        android:layout_below="@+id/title"
        android:layout_marginLeft="10dip" />

    <TextView android:text="@+id/duration"
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dip" />
</RelativeLayout>
